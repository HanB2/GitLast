@model web_esm.Models_Act.Base.BaseAirportModels
@{
	//팝업 형식 레이아웃 별도 지정
	Layout = "~/Views/Shared/_PopLayout.cshtml";
}


	
			<article class="col-sm-12 col-md-12 col-lg-12" style="height:400px; padding:0px;">
				<div class="jarviswidget" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
					<header role="heading">
						<span class="widget-icon"> <i class="fa fa-search"></i> </span>
						<h2>공항 추가 / 수정 </h2>
					</header>
					<div role="content">
						<div class="widget-body no-padding">
							@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "view_form", @class = "smart-form" })){
								@Html.HiddenFor(model => model.act_key)
								@Html.HiddenFor(model => model.act_type)
								@Html.HiddenFor(model => model.Item.SEQNO)
							    @Html.AntiForgeryToken()

								<fieldset>

									<div class="row">
										<label class="label col col-2">국가명</label>
										<section class="col col-10">
											<label class="select">
												@Html.DropDownList("schType", new SelectList(Model.nationArray, "opt_key", "opt_value", Model.Item.NATION_CODE),"선택" , new { onchange = "setNATIONCODE(this.value)" }) <i></i>
											</label>
										</section>
									</div>

									<div class="row">
										<label class="label col col-2">공항명</label>
										<section class="col col-10">
											<label class="input">
												@Html.TextBoxFor(model => model.Item.AIRPORT_NAME, new { @id = "AIRPORT_NAME" })
												@Html.ValidationMessageFor(model => model.Item.AIRPORT_NAME)
											</label>
										</section>
									</div>

									<div class="row">
										<label class="label col col-2">공항위치</label>
										<section class="col col-10"> 
											<label class="input">
												@Html.TextBoxFor(model => model.Item.AIRPORT_LOCATION, new { @id = "AIRPORT_LOCATION" })
											</label>
										</section>
									</div>

									<div class="row">
										<label class="label col col-2">국가코드</label>
										<section class="col col-4">
											<label class="input">
												@Html.TextBoxFor(model => model.Item.NATION_CODE, new { @id = "NATION_CODE" , @readonly = "readonly" })
												@Html.ValidationMessageFor(model => model.Item.NATION_CODE)
											</label>
										</section>
										<label class="label col col-2">공항코드</label>
										<section class="col col-4">
											<label class="input">
												@Html.TextBoxFor(model => model.Item.AIRPORT_CODE, new { @id = "AIRPORT_CODE" })
											</label>
										</section>
									</div>

								</fieldset>

								}

						</div>
					</div>
				</div>
			</article>
		






@section pagespecific {
	<script type="text/javascript">
				function formSubmit() {
					$('#view_form').submit();
				}

		
		function setNATIONCODE(code) {
			//alert(tmp.text);
			$("#NATION_CODE").val(code);
			//$("#nation_name_tmp").val(name);
		}

	</script>

}
