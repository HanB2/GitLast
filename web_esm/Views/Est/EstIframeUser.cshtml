@{
	//팝업 형식 레이아웃 별도 지정
	Layout = "~/Views/Shared/_PopLayout.cshtml";
}


@model web_esm.Models_Act.Est.EstUserModels



			<article class="col-sm-12 col-md-12 col-lg-12" style="height:400px; padding:0px;">
				<div class="jarviswidget" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false" >
					<header role="heading">
						<span class="widget-icon"> <i class="fa fa-table"></i> </span>
						<h2>ETOMARS 계정 관리</h2>
						<span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
					</header>

					<div role="content">
						<div class="widget-body no-padding">

							<div class="table-responsive">
								<table class="table table-bordered table-striped">
									<thead>
										<tr>
											<th style="width:5%;">번호</th>
											<th style="width:10%;"></th>
											<th>계정</th>
											<th>사용자 명</th>
											<th>사용자 전화번호</th>
											<th style="width:2%;">그룹명</th>
											<th>생성일자</th>
											<th style="width:8%;">상태</th>
										</tr>
									</thead>
									<tbody>

										@foreach (var item in Model.Items)
										{
											<tr>
												<td>@item.SEQNO</td> <!--번호-->
												<td>
													<a onclick="javascript:callEdit('@item.SEQNO');" href="#" class="btn btn-default btn-xs" data-toggle="modal" data-target="#myModal_add">
														<i class="fa fa-edit"></i>
													</a>
													<a onclick="javascript:callDelete('@item.SEQNO');" href="#" class="btn btn-default btn-xs">
														<i class="fa fa-trash-o"></i>
													</a>
												</td>
												<td>@item.EMAIL</td><!--계정-->
												<td>@item.USERNAME</td><!--사용자 명-->
												<td>@item.TELNO</td><!--사용자 전화번호-->
												<td>@item.GROUP_NAME</td><!--그룹명-->
												<td>@item.CREATETIME</td><!--생성일자-->
												<td>
													@if (@item.STATUS != 0)
													{
														<p>사용</p>
													}
													else
													{
														<p>미사용</p>
													}


												</td><!--상태-->
											</tr>
										}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
				<a class="btn btn-default" href="#" onclick="javascript:callAdd();" data-toggle="modal" data-target="#myModal_add"> 신규 등록</a>

			</article>

<!-- END MAIN CONTENT -->

@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "listForm", @name = "listForm", @class = "smart-form" }))
{
	@Html.HiddenFor(model => model.act_type)
	@Html.HiddenFor(model => model.act_key)
	@Html.HiddenFor(model => model.viewEstCode)
}

<div class="modal fade in" id="myModal_add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog" style="width:800px;">
		<div class="modal-content">

			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
					×
				</button>
				<h4 class="modal-title" id="myModalLabel">계정 관리 상세</h4>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-md-12">
						<iframe width="100%" height="600px;" scrolling="no" frameborder="0" id="viewIframe" src=""></iframe>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">
					닫기
				</button>
				<button onclick="javascript:act_ifarame();" type="button" id="modal_act" class="btn btn-primary">
					등록
				</button>
			</div>


		</div>
	</div>
</div>




@section pagespecific {


	<script type="text/javascript">

		//등록 팝업창 호출
		function callAdd() {
			$("#modal_act").html('등록');
			$('#viewIframe').attr('src', '/Est/EstIframeUserView');
		}

		//수정 팝업창 호출
		function callEdit(seqno) {
			$("#modal_act").html('수정');
			$('#viewIframe').attr('src', '/Est/EstIframeUserView?seqNo=' + seqno);
		}

		// 등록/수정
		function act_ifarame() {
			var ifra = document.getElementById('viewIframe').contentWindow;
			ifra.formSubmit();
		}


		//삭제
		function callDelete(seqno) {
			var msg = "삭제하시겠습니까?";
			if (confirm(msg)) {
				$('#act_type').val('del');
				$('#act_key').val(seqno);
				$('#listForm').submit();
			}
		}

		//페이징 공통 함수
		function movPage(page) {
			$('#Paging_page').val(page);
			$('#listForm').submit();
		}
	</script>


}