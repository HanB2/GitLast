@{
    ViewBag.PageId = "extr-page";
    ViewBag.PageClass = "animated fadeInDown";
}

@section topright{
    <span id="extr-page-header-space"> <span class="hidden-mobile">@comm_global.Language.Resources.ESE_Error_NeedAnAccount </span> <a href="@Url.Action("register", "account")" class="btn btn-danger">@comm_global.Language.Resources.ESE_Error_CreateAccount</a> </span>
}

<div id="content" class="container">
    <div class="row">
        @{ Html.RenderPartial("_ErrorText"); }
        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
            <div class="well no-padding">
                <form action="@Url.Action("login", "account")" method="POST" id="login-form" class="smart-form client-form">
                    <header>
                       @comm_global.Language.Resources.ESE_Error_SignIn
                    </header>
                    @Html.AntiForgeryToken()
                    @Html.ValidationBootstrap()
                    <fieldset>
                        <section>
                            <label class="label">@comm_global.Language.Resources.ESE_Error_Email</label>
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                <input type="email" name="email">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> @comm_global.Language.Resources.ESE_Error_PleaseEnterEmailAddrOrUsername</b>
                            </label>
                        </section>

                        <section>
                            <label class="label">@comm_global.Language.Resources.ESE_Error_Password</label>
                            <label class="input">
                                <i class="icon-append fa fa-lock"></i>
                                <input type="password" name="password">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> @comm_global.Language.Resources.ESE_Error_EnterYourPassword</b>
                            </label>
                            <div class="note">
                                <a href="@Url.Action("forgotpassword", "account")">@comm_global.Language.Resources.ESE_Error_ForgotPasswd</a>
                            </div>
                        </section>

                        <section>
                            <label class="checkbox">
                                <input type="checkbox" name="remember">
                                <i></i>@comm_global.Language.Resources.ESE_Error_StaySignedIn
                            </label>
                        </section>
                    </fieldset>
                    <footer>
                        <button type="submit" class="btn btn-primary">
                            @comm_global.Language.Resources.Button_SubmitSignIn
                        </button>
                    </footer>
                </form>
            </div>
            @{ Html.RenderPartial("_SocialMedia"); }
        </div>
    </div>
</div>
@section pagespecific{
    <script type="text/javascript">
        $(function () {
            // Validation
            $("#login-form").validate({
                // Rules for form validation
                rules: {
                    email: {
                        required: true,
                        email: true
                    },
                    password: {
                        required: true,
                        minlength: 3,
                        maxlength: 20
                    }
                },

                // Messages for form validation
                messages: {
                    email: {
                    	required: @comm_global.Language.Resources.Script_emailRequired,
                    	email: @comm_global.Language.Resources.Script_emailValid,
                    },
                    password: {
                    	required: @comm_global.Language.Resources.Script_passwordRequired,
                    }
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        });
    </script>
}